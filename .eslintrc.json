{
  "env": {
    "browser": true,
    "node": true
  },
  "parser": "@babel/eslint-parser",
  "parserOptions": {
    "sourceType": "module",
    "allowImportExportEveryWhere": false,
    "ecmaFeatures": {
      "globalReturn": false,
      "jsx": true
    },
    "babelOptions": {
      "parserOpts": {
        "plugins": ["jsx"]
      }
    },
    "ecmaVersion": 2020
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  }
}
